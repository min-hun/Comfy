<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/notishape">

        <TextView
            android:id="@+id/tvnoticontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Thông báo phí dịch vụ tháng 05 năm 2020 căn hộ B6-20"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvnotiday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvnoticontent"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorGrey"
            android:text="Hôm nay,09/05/2020" />


    </RelativeLayout>


</LinearLayout>
